<title>:
    GridLayout:
        cols: 2

        MDRectangleFlatButton:
            text: 'New Patient'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'newpatient'

        MDRectangleFlatButton:
            text: 'Old Patient'
            
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'oldpatient'

        MDRectangleFlatButton:
            text: "Find By OPD No."
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'findbyopdno'

        MDRectangleFlatButton:
            text: "Find By Name"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'findbyname'

        MDRectangleFlatButton:
            text: "Find By Name Place"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'findbynameplace'

        MDRectangleFlatButton:
            text: "Show Dues"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'showdues'
        MDRectangleFlatButton:
            text: "Show"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'show'

<newpatient>:
    opdnoentrynew:opdnoentrynew
    nameentrynew:nameentrynew
    ageentrynew:ageentrynew
    dateentrynew:dateentrynew
	placeentrynew:placeentrynew
	mobnoentrynew:mobnoentrynew
	
    GridLayout:
        cols:2
        MDLabel:
        	text:'OPD No.'
        TextInput:
        	id: opdnoentrynew
        MDLabel:
        	text:'Name'
        TextInput:
        	id: nameentrynew
        MDLabel:
        	text:'Age/Gender'
        TextInput:
        	id: ageentrynew
        MDLabel:
        	text:'Place'
        TextInput:
        	id: placeentrynew
        MDLabel:
        	text:'Mob No.'
        TextInput:
        	id: mobnoentrynew
        MDLabel:
        	text:'Date'
        TextInput:
        	id: dateentrynew
        	text:root.dateformat
        MDRectangleFlatButton:
            text: 'Submit'
            background_color: 1, 0, 0, 1
            on_press:
                root.savetodatabase()
                root.manager.transition.direction = 'right'
                root.manager.current = 'title'
        MDRectangleFlatButton:
            text: "Home"
            background_color: 1, 0, 0, 1
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'title'

